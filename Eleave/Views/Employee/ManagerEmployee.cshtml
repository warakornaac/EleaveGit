<script defer>
    $('#department-selector').select2({
        width: '100%'
    });
    var getDetailEmployeeURL = '@Url.Action("DetailEmployee", "Employee")';
    $(document).ready(function () {
        $('[id^="viewEmployeeDetail-"]').on('click', function (e) {
            e.preventDefault();
            var empID = $(this).data('emp');
            getDetailEmployee(empID);
        });
        $('#employee-table').dataTable({
            paging: true,
            pageLength: 50,
            lengthChange: false,
            searching: false,
            ordering: false,
            select: false,
            language: {
                info: "แสดง _START_ ถึง _END_ จากทั้งหมด _TOTAL_ คน"
            }
        });
    });
    $(document).on('click', "#reset-btn", function () {
        $('#empId').val('');
        $('#Company-selector').val('').trigger('change');
        $('#department-selector').val('').trigger('change');
        $('#empName').val('');
    });
    $(document).ready(function () {
        $('#formSearch').submit(function (e) {
            var empId = $("#empId").val().trim();
            var department = $("#department-selector").val();
            var name = $("#empName").val().trim();
            var level = $("#empRole").val().trim();

            if (empId == '' && (department === "" || department === null) && name == '' && level == '') {
                e.preventDefault();
                Swal.fire({
                    icon: "error",
                    title: "กรุณากรอกข้อมูลที่ต้องการค้นหา"
                });
                return false;
            }
        });
    })
</script>

