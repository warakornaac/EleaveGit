
@{
    ViewBag.Title = "สิทธิ์การเข้าใช้งาน";
}
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">สิทธิ์การเข้าใช้งาน</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Setting", "Employee")">สิทธิ์การเข้าใช้งาน</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            @using (Html.BeginForm())
            {
                <div class="card-body p-3 m-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">รหัส</th>
                                    <th class="text-center">ประเภทผู้ใช้</th>
                                    <th class="text-center">คำอธิบายผู้ใช้งาน</th>
                                    <th class="text-center">อนุมัติ</th>
                                    <th class="text-center">ร้องขอ</th>
                                    <th class="text-center">แก้ไขข้อมูล	</th>
                                    <th class="text-center">รับรายการร้องขอ	</th>
                                    <th class="text-center">ตั้งค่าระบบ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 1; i <= 4; i++)
                                {
                                    <tr class="text-center">
                                        <td>@i</td>
                                        <td>USER</td>
                                        <td>พนักงาน</td>
                                        <td>
                                            <div class="chk-option">
                                                <label class="check-task custom-control custom-checkbox d-flex justify-content-center done-task">
                                                    @Html.CheckBox("Approve", false, new { @class = "custom-control-input" })
                                                    @Html.Label("Approve", "", new { @class = "custom-control-label" })
                                                    <input type="checkbox" class="custom-control-input">
                                                    <span class="custom-control-label"></span>
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="chk-option">
                                                <label class="check-task custom-control custom-checkbox d-flex justify-content-center done-task">
                                                    @Html.CheckBox("Request", true, new { @class = "custom-control-input" })
                                                    @Html.Label("Request", "", new { @class = "custom-control-label" })
                                                    <input type="checkbox" class="custom-control-input">
                                                    <span class="custom-control-label"></span>
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="chk-option">
                                                <label class="check-task custom-control custom-checkbox d-flex justify-content-center done-task">
                                                    @Html.CheckBox("Edit", true, new { @class = "custom-control-input" })
                                                    @Html.Label("Edit", "", new { @class = "custom-control-label" })
                                                    <input type="checkbox" class="custom-control-input">
                                                    <span class="custom-control-label"></span>
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="chk-option">
                                                <label class="check-task custom-control custom-checkbox d-flex justify-content-center done-task">
                                                    @Html.CheckBox("AcceptRequest", true, new { @class = "custom-control-input" })
                                                    @Html.Label("AcceptRequest", "", new { @class = "custom-control-label" })
                                                    <input type="checkbox" class="custom-control-input">
                                                    <span class="custom-control-label"></span>
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="chk-option">
                                                <label class="check-task custom-control custom-checkbox d-flex justify-content-center done-task">
                                                    @Html.CheckBox("Setting", true, new { @class = "custom-control-input" })
                                                    @Html.Label("Setting", "", new { @class = "custom-control-label" })
                                                    <input type="checkbox" class="custom-control-input">
                                                    <span class="custom-control-label"></span>
                                                </label>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group float-end m-2">

                        <input type="submit" value="Search" class="btn btn-success" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

